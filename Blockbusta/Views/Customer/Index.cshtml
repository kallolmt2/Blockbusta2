@model IEnumerable<Blockbusta.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List</h2>
<button type="submit" class="btn btn-default">@Html.ActionLink("New Customer", "New", "Customer")</button>
<table class="table">
    <tr>
        <th>
            Customer
        </th>
        <th>Membership Type</th>
    </tr>
@if (!Model.Any()) { <text>No customer Found</text>}
else { 
    foreach (var customer in Model)
    {
         <tr>
              <td>
                   @Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)
              </td>
             <td>
                 @customer.MembershipType.Name
             </td>
         </tr>
        }
    }
