@model Blockbusta.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
                   
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.BirthDate != null)
    {
    <li>BirthDate: @Model.BirthDate.Value.ToShortDateString()</li>
    }

</ul>
<button type="submit" class="btn btn-default">@Html.ActionLink("Edit Customer", "Edit", "Customer", new { id = Model.Id }, null)</button>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>